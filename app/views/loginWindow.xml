<Alloy>
	<Window id="loginWindow">
		
		<ScrollView id="mainLogin" layout="vertical" contentWidth="auto" contentHeight="auto" showVerticalScrollIndicator="true" showHorizontalScrollIndicator="false" height="100%">
		 	<ImageView image="/login-logo.png" height="160" top="80px"></ImageView>
			<TextField hintText="Email" height="40" width="Ti.UI.FILL" id="loginInput"></TextField>
			<TextField hintText="Password" passwordMask="true" height="40" width="Ti.UI.FILL" id="password"></TextField>
		
			<Button height="40" width="93%" id="loginBtn" onClick="login">Login</Button>
			<Button height="40" width="93%" left="20px"  id="facebookBtn" onClick="facebookLogin">Facebook Login</Button>
			<Button height="40" width="93%" id="regButton" onClick="openRegister">Register</Button>
			
		</ScrollView>
		</Window>
</Alloy>
