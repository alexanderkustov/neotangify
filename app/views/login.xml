<Alloy>
		<NavigationWindow id="win1" platform="ios">
			<Window>
				<TitleControl>
					<Label id="myTitleLabel">Please Login</Label>
				</TitleControl>
		<ScrollView id="mainLogin" layout="vertical" contentWidth="auto" contentHeight="auto" showVerticalScrollIndicator="true" showHorizontalScrollIndicator="false" height="100%">
		 	<ImageView image="/login-logo.png" height="160">
			<TextField value="a@a.com" height="40" width="Ti.UI.FILL" id="loginInput"></TextField>
			<TextField hintText="Password" passwordMask="true" height="40" width="Ti.UI.FILL" id="password" value="123"></TextField>
			<Button height="40" width="Ti.UI.FILL" onClick="login">Login</Button>
			<Button height="40" width="Ti.UI.FILL" onClick="openRegister">Register</Button>
			<Button height="40" width="Ti.UI.FILL" onClick="facebookLogin">Facebook</Button>
			
		</ScrollView>
	</Window>
</NavigationWindow>
    		  
</Alloy>