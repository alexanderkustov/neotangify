<Alloy>
<NavigationWindow id="register">
	<Window title="Registration">
	
	
		<LeftNavButton>
			<Button id="back" onClick="goback">Back</Button>
		</LeftNavButton>

		<ScrollView id="registerContainer" layout="vertical">
			<TextField hintText="Name" height="40" width="Ti.UI.FILL" id="name"></TextField>
			<TextField hintText="Email" height="40" width="Ti.UI.FILL" id="email"></TextField>
			<TextField hintText="Password" passwordMask="true" height="40" width="Ti.UI.FILL" id="password"></TextField>
		<TextField hintText="Confirm Password" passwordMask="true" height="40" width="Ti.UI.FILL" id="password_confirmation"></TextField>
		<Button height="40" width="Ti.UI.FILL" onClick="register">Register</Button>
		
		</ScrollView>
	
	</Window>
</NavigationWindow>

</Alloy>