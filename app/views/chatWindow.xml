<Alloy>
	<NavigationWindow id="win1" platform="ios">
		<Window id="chatWindow" title="">
			<LeftNavButton>
	            <Button id="back" onClick="goback">Back</Button>
	        </LeftNavButton>
			<ScrollView id="chatContaniner" layout="vertical" contentWidth="auto" contentHeight="auto" showVerticalScrollIndicator="true" showHorizontalScrollIndicator="false" height="100%">		
			<TableView id="chatArea" backgroundColor="transparent" height="88%">
			</TableView>	
			<View id="chatBtn" layout="horizontal" bottom="0%" height="170px" backgroundColor="#0071bc">
				<TextField hintText="Enter Message..." height="40" width="60%" id="textChat"></TextField>
				<Button height="40" width="20%" onClick="sendMsg">Send</Button>
				
			</View>
			</ScrollView>	
		</Window>
	</NavigationWindow>
</Alloy>


   