<Alloy>
	<TabGroup>
		<Tab title="Profile" icon="KS_nav_views.png">
			<Window title="Profile">
				<View layout="vertical">
					<Button height="40" width="Ti.UI.FILL" zIndex="100" right="10" textAlign="right" onClick="editProfile">Edit</Button>
					<ImageView image="/tangy_back.jpg" zIndex="1" height="160" top="-50" width="Ti.UI.FILL"></ImageView>
					<ImageView image="/person.png" zIndex="5" top="-50" borderRadius="50%" borderWidth="3" borderColor="white"></ImageView>
					<Label id="user_name">Your Name</Label>
					<Label id="birthdate">Birthdate</Label>
					<Label id="short_description">Short Description</Label>					
				</View>
			</Window>
		</Tab>
		
		<Tab title="Feed" icon="KS_nav_ui.png">
			<Window title="Activity">
				<View layout="vertical">
					<Button height="40" width="Ti.UI.FILL" onClick="getActivityFeed">Refresh</Button>
				<TableView id="mainList">
					<TableViewRow id="listRow">
						<View id="rowContainer">
							<ImageView id="profilePic" image="radar.png"></ImageView>
							<Label id="profileName">Teste</Label>
							<Label id="timeAgo">10 minutes ago</Label>
							<Label id="status"></Label>
							<View id="grayLine" bottom="51"></View>
							<View id="bottomActions">
							</View>
						</View>
					</TableViewRow>
				</TableView>
				</View>
			</Window>
		</Tab>
		
		<Tab title="Radar" icon="radar.png">
			<Window title="tangify">
				<View layout="vertical">
        		<Button height="40" width="Ti.UI.FILL" onClick="geolocate">Geolocate</Button>
        		<View id="radar" width="Ti.UI.FILL" height="460px" width="460px" backgroundImage="/radar_back.png">
        			
        		</View>
    		</View>
			</Window>
		</Tab>
		
		<Tab title="Chat" icon="KS_nav_ui.png">
			<Window title="chat">
				<ScrollView id="chatArea" layout="vertical" contentWidth="auto" contentHeight="auto" showVerticalScrollIndicator="true" showHorizontalScrollIndicator="false" height="80%">
				
				</ScrollView>	
				<View id="chatBtn" layout="horizontal" top="80%" backgroundColor="#0071bc">
					<TextField hintText="Enter Message..." height="40" width="70%" id="textChat"></TextField>
					<Button height="40" width="20%" onClick="sendMsg">Send</Button>
				</View>
			</Window>
		</Tab>
		
		<Tab title="Settings" icon="chat.png">
			<Window title="Chat">
				<Label>I am Settings</Label>
			</Window>
		</Tab>
		
	</TabGroup>
</Alloy>